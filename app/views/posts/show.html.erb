<h1><%= @post.title %></h1>

<p><%= @post.content %></p>

<h3>Categories</h3>
<ul>
  <%= @post.categories.each do |c| %>
    <li><%= c.name %></li>
  <% end %>
</ul>

<h3>Comments</h3>
<ul>
  <%= @post.comments.each do |c| %>
    <li><%= c.content %></li>
  <% end %>
</ul>

<h3>Users</h3>
<ul>
  <%= @post.users.unique.each do |u| %>
    <li><%= link_to u.name, u %></li>
  <% end %>
</ul>
