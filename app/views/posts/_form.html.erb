<style>
  .whatever {
    border: 1px solid red
  }
</style>

<%= form_for(@post) do |f| %>

  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :content %>
    <%= f.text_area :content %>
  </p>

  <%= f.label "Choose an existing category" %>
  <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>
    <p>
      <%= b.check_box %>
      <%= b.label :class => "whatever" %>
    </p>
  <% end %>  
  
  <br><br>
  <%= f.label "Or, create a new category" %>
  <%= f.fields_for :categories, @post.categories.build do |categories_fields| %>
      <%= categories_fields.text_field :name %>
  <% end %>

  <br><br>
  <%= f.submit %>

<% end %>  
          
 